/*
    Components: Example
    ---
    Example container for blogposts
*/
.c-example {
  z-index: 10; }

.c-example__title {
  position: relative; }

.c-example__body {
  position: relative;
  display: flex;
  flex-direction: column;
  margin-bottom: var(--global-whitespace-base); }

.c-example__body--xl {
  padding: var(--global-whitespace-base) 0 0; }
  @media (min-width: 40rem) {
    .c-example__body--xl {
      padding: var(--global-whitespace-double) 0 var(--global-whitespace-base); } }

.c-example__content {
  position: relative;
  z-index: 120;
  margin-bottom: var(--global-whitespace-base); }

.c-example__wrapper {
  position: relative;
